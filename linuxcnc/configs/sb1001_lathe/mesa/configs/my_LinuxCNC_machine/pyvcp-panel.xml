	<vbox>
		<relief>RIDGE</relief>
		<bd>3</bd>

		<hbox>
                        <u32>
                                <font>("Helvetica", 12)</font>
                                <halpin>"now-hour"</halpin>
                                <format>"02d"</format>
                        </u32>
                        <label>
                                <text>":"</text>
                                <font>("Helvetica", 12)</font>
                        </label>
                        <u32>
                                <font>("Helvetica", 12)</font>
                                <halpin>"now-minute"</halpin>
                                <format>"02d"</format>
                        </u32>
                        <label>
                                <text>":"</text>
                                <font>("Helvetica", 12)</font>
                        </label>
                        <u32>
                                <font>("Helvetica", 12)</font>
                                <halpin>"now-second"</halpin>
                                <format>"02d"</format>
