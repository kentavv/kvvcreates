<hbox>
                <hbox>
		        <checkbutton>
				<font>("Helvetica", 12)</font>
				<halpin>"datalogger-enable"</halpin>
				<text>"Data logger    "</text>
			</checkbutton>
		</hbox>

                <hbox>
                        <label>
                                <text>"High-speed cam"</text>
                                <font>("Helvetica", 12)</font>
                        </label>

                        <led>
                                <halpin>"hscam-recording"</halpin>
                                <size>22</size>
                                <on_color>"green"</on_color>
                                <off_color>"red"</off_color>
                        </led>
                </hbox>
</hbox>
</vbox>

	</vbox>
</pyvcp>
